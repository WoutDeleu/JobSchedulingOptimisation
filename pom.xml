                            <mainClass>MAIN_TO_SUBMIT_V1</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>FULL</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
